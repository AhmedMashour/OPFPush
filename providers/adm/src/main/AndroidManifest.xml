<manifest
    package="org.onepf.openpush.adm"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <uses-permission android:name="com.amazon.device.messaging.permission.RECEIVE"/>
    <permission
        android:name="${packageId}.permission.RECEIVE_ADM_MESSAGE"
        android:protectionLevel="signature"/>

    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.WAKE_LOCK"/>
    <uses-permission android:name="${packageId}.permission.RECEIVE_ADM_MESSAGE"/>

    <application>
        <service
            android:name=".ADMService"
            android:exported="false"/>

        <receiver
            android:name=".ADMBroadcastReceiver"
            android:permission="com.amazon.device.messaging.permission.SEND">

            <intent-filter>
                <action android:name="com.amazon.device.messaging.intent.REGISTRATION"/>
                <action android:name="com.amazon.device.messaging.intent.RECEIVE"/>

                <category android:name="${packageId}"/>
            </intent-filter>
        </receiver>
    </application>
</manifest>