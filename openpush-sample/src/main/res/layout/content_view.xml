<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="org.onepf.openpush.sample.fragments.PushWorkflowFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/label_registration_status"
            android:textAppearance="@android:style/TextAppearance.Medium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:text="@string/registration_status"/>

        <TextView
            android:id="@+id/tv_registration_status"
            android:textAppearance="@android:style/TextAppearance.Medium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/label_registration_status"
            tools:text="Registered"/>

        <TextView
            android:id="@+id/label_push_provider"
            android:textAppearance="@android:style/TextAppearance.Medium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_registration_status"
            android:layout_marginTop="16dp"
            android:textStyle="bold"
            android:text="@string/push_provider"/>

        <TextView
            android:id="@+id/tv_push_provider"
            android:textAppearance="@android:style/TextAppearance.Medium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/label_push_provider"
            tools:text="Gcm"/>

        <Button
            android:id="@+id/btn_register"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_push_provider"
            android:layout_marginTop="16dp"
            android:text="@string/btn_register"/>

        <Button
            android:id="@+id/btn_unregister"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_push_provider"
            android:layout_marginTop="16dp"
            android:text="@string/btn_gcm_unregister"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/label_registration_id"
            android:textAppearance="@android:style/TextAppearance.Medium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/btn_register"
            android:layout_marginTop="16dp"
            android:textStyle="bold"
            android:text="@string/registration_id"/>

        <TextView
            android:id="@+id/tv_registration_id"
            android:textAppearance="@android:style/TextAppearance.Small"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/label_registration_id"
            android:layout_marginTop="4dp"
            tools:text="APA91bG6mnXkIPYyNQs2DIIAnmlnE_4iHyjRuy9VCuKAoBJJGm9DCMBVeEFJExCf9-xx7RfogtfJjqhki_7YPRk4oQX_fLNkuPenUS0BSAr7SSi_dYJ5xHDmKSP4Jq7wwtjWBu46RzjrO5I3qXr7H2PJiNszNHhx-atxm4L0j1kGJZRx8wId3X4"/>

        <Button
            android:id="@+id/btn_copy_to_clipboard"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_registration_id"
            android:layout_marginTop="16dp"
            android:text="@string/btn_copy_to_clipboard"/>

        <TextView
            android:id="@+id/label_message"
            android:textAppearance="@android:style/TextAppearance.Medium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/btn_copy_to_clipboard"
            android:layout_marginTop="16dp"
            android:text="@string/message"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/tv_message_content"
            android:textAppearance="@android:style/TextAppearance.Small"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/label_message"
            android:layout_marginTop="16dp"
            android:visibility="gone"/>

    </RelativeLayout>
</ScrollView>
