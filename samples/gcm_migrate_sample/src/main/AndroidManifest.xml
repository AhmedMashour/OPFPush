<manifest
    package="org.onepf.opfpush.gcm_migrate_sample"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Main activity. -->
    <application
        android:name=".DemoApplication"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:allowBackup="false">
        <!-- Required for applications which use Google Play Services. -->
        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version"/>

        <activity
            android:name="org.onepf.opfpush.gcm_migrate_sample.DemoActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/app_name"
            android:launchMode="singleTop">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <!--
          WakefulBroadcastReceiver that will receive intents from GCM
          services and hand them to the custom IntentService.

          The com.google.android.c2dm.permission.SEND permission is necessary
          so only GCM services can send data messages for the app.
        -->
        <receiver
            android:name=".OPFPushBroadcastReceiver"
            android:exported="false">
            <intent-filter>
                <!-- Receives the actual messages. -->
                <action android:name="org.onepf.opfpush.MESSAGE_RECEIVE"/>
                <action android:name="org.onepf.opfpush.MESSAGED_DELETED"/>
            </intent-filter>
        </receiver>
        <service android:name=".OPFPushIntentService"/>
    </application>

</manifest>
